<?xml version="1.0" encoding="UTF-8"?>
<services-config>
    <services>
        <service id="rtmpy-flashremoting-service"
                 class="flex.messaging.services.RemotingService"
                 messageTypes="flex.messaging.messages.RemotingMessage">
            <destination id="RTMPy">
                <channels>
                    <channel ref="my-rtmpy"/>
                </channels>
                <properties>
                    <source>*</source>
                </properties>
            </destination>
        </service>
    </services>

    <channels>
        <channel-definition id="my-rtmpy" class="mx.messaging.channels.AMFChannel">
            <endpoint uri="http://localhost/gateway" class="flex.messaging.endpoints.AMFEndpoint"/>
        </channel-definition>
    </channels>
</services-config>
